# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 4
tab_size = 4

[*.templ]
indent_style = tab
indent_size = 4
tab_size = 4

[Makefile]
indent_style = tab
indent_size = 4
tab_size = 4

[*.templ]
indent_style = tab
indent_size = 4
tab_size = 4

[*.css]
indent_style = tab
indent_size = 4